<div class="container well text-center">
  <h2>Meet <%= @robot.name %></h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
        <div class="thumbnail">
      <img src="https://robohash.org/<%= @robot.avatar %>.png">
        </div>
    </div>
    <div class="col-md-6">
      <div id="single-robot-data-table">
        <table class="table table-striped table-bordered table-hover table-condensed">
          <tr>
            <td class="first-column">ID:</td>
            <td><%= @robot.id %></td>
          </td>
          <tr>
            <td class="first-column">Name:</td>
            <td><%= @robot.name %></td>
          </tr>
          <tr>
            <td class="first-column">City:</td>
            <td><%= @robot.city %></td>
          </tr>
          <tr>
            <td class="first-column">State:</td>
            <td><%= @robot.state %></td>
          </tr>
          <tr>
            <td class="first-column">Birthdate:</td>
            <td><%= @robot.birthdate %></td>
          </tr>
          <tr>
            <td class="first-column">Date Hired:</td>
            <td><%= @robot.date_hired %></td>
          </tr>
          <tr>
            <td class="first-column">Department:</td>
            <td><%= @robot.department %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container nav text-center">
  <button><a class="btn btn-secondary" href="/robots">Back to All Robots</a></button>
</div>
