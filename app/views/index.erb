<h1 class="well">All the Robots</h1>

<table id="all-robot-data" class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Avatar</th>
    <th>Birthdate</th>
    <th>Date Hired</th>
    <th>Department</th>
  </tr>
<% @robots.each do |robot| %>
    <tr>
      <td><%= robot.id %></td>
      <td id="robot-name"><a href='/robots/<%= robot.id %>'><%= robot.name %></a></td>
      <td><%= robot.city %></td>
      <td><%= robot.state %></td>
      <td><%= robot.avatar %></td>
      <td><%= robot.birthdate %></td>
      <td><%= robot.date_hired %></td>
      <td><%= robot.department %></td>
      <td><a href="/robots/<%= robot.id %>/edit">Edit</a></td>
      <td>
        <form action="robots/<%= robot.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
<% end %>
</table>
